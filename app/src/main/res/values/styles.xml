    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Button styling -->
        <item name="materialButtonStyle">@style/AppTheme.Button</item>
    </style>

    <style name="materialDarkButtonStyle" parent="AppTheme.Button">
        <item name="backgroundTint">@color/colorSecondary</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:height">70dp</item>
    </style>
    <style name="AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxBackgroundColor">@color/textFieldBackground</item>
        <item name="android:textColorHint">@color/colorInactive</item>
    </style>
    <style name="AppTheme.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:background">@color/textFieldBackground</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <style name="AppTheme.SimpleListButton">
        <item name="android:background">@color/textFieldBackground</item>
        <item name="android:height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

</resources>
